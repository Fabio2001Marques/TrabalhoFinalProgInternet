@model TrabalhoFinalProgInternet.ViewModels.ColaboradorViewModel

@{
    ViewData["Title"] = "Adicionar Colaborador";
}
<div class="container mt-3">
<h1>Adicionar Colaborador</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumeroCC" class="control-label"></label>
                <input asp-for="NumeroCC" class="form-control" />
                <span asp-validation-for="NumeroCC" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Contacto" class="control-label"></label>
                <input asp-for="Contacto" class="form-control" />
                <span asp-validation-for="Contacto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CargoId" class="control-label"></label>
                <select id=cargoId asp-for="CargoId" class="form-control" asp-items="ViewBag.CargoId" onchange="change(this)">
                    <option value="1">---Seleciona---</option>
                    <option value="2">Outro</option>
                </select>
                <textarea id="text_area" class="form-control" type="text" name="text_area" placeholder="Write something" rows="1" cols="1" style="display: none"></textarea>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>
    </div>

<script>
    function change(obj) {
        var selectBox = obj;
        var selected = selectBox.options[selectBox.selectedIndex].value;
        var textarea = document.getElementById("text_area");

        if (selected === '2') {
            selectBox.style.display = "none";
            textarea.style.display = "block";
        }
        else {
            textarea.style.display = "none";
        }
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
