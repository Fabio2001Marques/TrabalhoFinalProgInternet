@model IEnumerable<TrabalhoFinalProgInternet.Models.Cargo>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-3">
    <h1>Cargos</h1>

    <p>
        <a asp-action="Create" class="btn btn-secondary">Criar Novo Cargo</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.CargoId" class="btn btn-secondary">Editar</a> |
                        <a asp-action="Details" asp-route-id="@item.CargoId" class="btn btn-secondary">Detalhes</a> |
                        <a asp-action="Delete" asp-route-id="@item.CargoId" class="btn btn-secondary">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Colaboradores" asp-action="Create" class="btn btn-secondary mt-2">Voltar para criar Colaboradores</a>
</div>