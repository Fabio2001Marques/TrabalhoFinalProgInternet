@model TrabalhoFinalProgInternet.Models.Cargo

@{
    ViewData["Title"] = "Eliminar Cargo";
}

<div class="container mt-3">
    <h1 class="text-danger font-weight-bold">Eliminar Cargo</h1>

    <h3 class="text-danger">Tem a certeza que quer eliminar este cargo?</h3>
    <div>
        <h4>Cargo</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="CargoId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>