@model TrabalhoFinalProgInternet.Models.Tarefa

@{
    ViewData["Title"] = "Adicionar Tarefa";
}
<div class="container mt-3">
<h1>Adicionar Tarefa</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaInicio" class="control-label"></label>
                <input asp-for="DataPrevistaInicio" class="form-control" />
                <span asp-validation-for="DataPrevistaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataPrevistaFim" class="control-label"></label>
                <input asp-for="DataPrevistaFim" class="form-control" />
                <span asp-validation-for="DataPrevistaFim" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ProjetoId" class="control-label"></label>
                <select id=projetoId asp-for="ProjetoId" class="form-control" asp-items="ViewBag.ProjetoId" onchange="change(this)">
                    <option value="1">---Seleciona---</option>
                </select>
               
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>

<script>
    function change(obj) {
        var selectBox = obj;
        var selected = selectBox.options[selectBox.selectedIndex].value;
        var input = document.getElementById("NovoCargo");
        var button = document.getElementById("buttonNovoCargo");

        if (selected === '2') {
            input.style.display = "block";
            input.focus();
            button.style.display = "block";
            selectBox.disabled = true;
        }
        else {
            input.style.display = "none";
        }
    }
    function voltar() {
        var selected = document.getElementById("cargoId");
        var input = document.getElementById("NovoCargo");
        var button = document.getElementById("buttonNovoCargo");

        button.style.display = "none";
        input.style.display = "none";
        selected.disabled = false;
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
