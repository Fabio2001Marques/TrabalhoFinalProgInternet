@model TrabalhoFinalProgInternet.Models.ColaboradorProjeto

@{
    ViewData["Title"] = "Eliminar Colaborador";
}

<div class="container mt-4">
    <h1>Eliminiar Colaborador</h1>

    <h3>Tem a certeza que pretende eliminar o colaborador @ViewBag.Colaborador.Colaborador.Nome do projeto @ViewBag.Colaborador.Projeto.Nome?</h3>
    <div>
        <hr />
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Colaborador)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Colaborador.Contacto)
            </dd class>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Projeto)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Projeto.Nome)
            </dd class>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataDeInicio)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataDeInicio)
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.DataDeSaida)
            </dt>
            <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.DataDeSaida)
            </dd>
        </dl>
    
        <form asp-action="Delete">
            <input type="hidden" asp-for="ColaboradorId" />
            <input type="hidden" asp-for="ProjetoId" />
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            <a asp-action="Index" asp-route-id="@ViewBag.Colaborador.ProjetoId" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</div>