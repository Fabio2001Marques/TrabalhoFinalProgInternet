@model IEnumerable<TrabalhoFinalProgInternet.Models.ColaboradorProjeto>

@{
    ViewData["Title"] = "Index";
}
<div class="container mt-4">
    <h1>Colaboradores no Projeto @ViewBag.Projeto.Nome</h1>
    <p>
        <a asp-action="Create" asp-route-id="@ViewBag.Projeto.ProjetoId" class="btn btn-secondary">Adicionar Colaborador</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Colaborador)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Projeto)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataDeInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DataDeSaida)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Colaborador.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Projeto.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDeInicio)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DataDeSaida)
                    </td>
                    <td>
                        @if (item.DataDeSaida == null)
                        {
                        <form asp-action="Finalizar" asp-route-ProjetoId="@item.ProjetoId" asp-route-ColaboradorId="@item.ColaboradorId">                            
                            <div class="form-group">
                                <input type="submit" value="Finalizar" class="btn btn-primary" />
                            </div>
                        </form>
                        }                   
                        <a asp-action="Delete" asp-route-id="@item.ColaboradorId" class="btn btn-secondary">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="mt-3 mb-3">
        <a asp-controller="Projetos" asp-action="Index" class=" btn btn-secondary">Voltar</a>
    </div>


</div>
