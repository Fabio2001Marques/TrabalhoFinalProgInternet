@model TrabalhoFinalProgInternet.Models.ColaboradorProjeto

@{
    ViewData["Title"] = "Create";
}

<h1>Adicionar colaborador ao Projeto @ViewBag.ProjetoNome</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ColaboradorId" class="control-label"></label>
                <select asp-for="ColaboradorId" class ="form-control" asp-items="ViewBag.ColaboradorNome"></select>
            </div>
            <div class="form-group">
                <label asp-for="ProjetoId" class="control-label"></label>
                <select asp-for="ProjetoId" class ="form-control" asp-items="ViewBag.ProjetoId" ></select>
            </div>

            <div class="form-group">
                <label asp-for="DataDeInicio" class="control-label"></label>
                <input asp-for="DataDeInicio" class="form-control" />
                <span asp-validation-for="DataDeInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataDeSaida" class="control-label"></label>
                <input asp-for="DataDeSaida" class="form-control" />
                <span asp-validation-for="DataDeSaida" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

