@model TrabalhoFinalProgInternet.Models.ColaboradorProjeto

@{
    ViewData["Title"] = "Adicionar Colaborador ao Projeto";
}
<div class="container mt-4">
    <h1>Adicionar Colaborador ao Projeto @ViewBag.Projeto.Nome</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProjetoId" />
                <div class="form-group">
                    <label asp-for="ColaboradorId" class="control-label"></label>
                    <select asp-for="ColaboradorId" class="form-control" asp-items="ViewBag.ColaboradorNome"></select>
                    <span asp-validation-for="ColaboradorId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DataDeInicio" class="control-label"></label>
                    <input asp-for="DataDeInicio" class="form-control" />
                    <span asp-validation-for="DataDeInicio" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Criar" class="btn btn-primary" />
                    <a asp-action="Index" asp-route-id="@ViewBag.Projeto.ProjetoId" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>


